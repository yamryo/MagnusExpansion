<blockquote>Group-like Magnus expansion</blockquote>

<!--  --------------------------------------------------------  -->
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Input a word:</h3>
  </div>
  
  <div class="panel-body">
    <div class="row">
      <form action="/Grouplike" method="post">
        <div class="col-xs-4"><div class="input-group">
          <input type="text" name="word" class="form-control">
        </div></div>
	
	<div class="input-group">
	  <button type="submit" class="btn btn-default">Submit</button>
	</div>
      </form>
    </div>
  </div>
</div>
<!--  --------------------------------------------------------  -->

<!--  --------------------------------------------------------  -->
<div class="bs-docs-example" data-content="OUTPUT">
     <%=
         unless (params['word'].nil? || params['word'].empty?) then
	     theta = GrouplikeExp.instance
	     w = Word.new(params['word'])
	     "#{params['word']}  -->  #{theta.log2(w).map{|e| e.to_s}}"
    	 end
     %>
</div>
