-# variables --------------------------
:ruby
  input_form_option = { :type => "text",
                        :name => "word",
                        :class => "form-control",
                        :autocomplete => "off" }
  glyph_option = { :class => "glyphicon glyphicon-exclamation-sign",
                   :aria => { :hidden => "true" } }
  headings = ["id", "word", "result", "created"]

-# title ------------------------------
%blockquote The degree 2 part of log of Symplectic Expansion

-# Input form -------------------------
.panel.panel-default
  .panel-heading
    %h3{ :class => "panel-title" } Input a word:
  .panel-body
    %form{ :class => "form-inline", :action => "/Symplectic/log2", :method => "post" }
      .form-group
        %input{ input_form_option }
        %button{ :type => "submit", :class => "btn btn-default" } Submit

-# alert ------------------------------
- if @alert
  .alert.alert-warning{ :role => "alert" }
    %span{ glyph_option }
    You can input the letters 'abstxy' and their capitals only.

- if @empty
  .alert.alert-info{ :role => "alert" }
    %span{ glyph_option }
    The word which you entered was equal to the empty word.

-# History ----------------------------
.bs-docs-example{ :data => { :content => "HISTORY" } }
  %table{ :class => "table table-striped" }
    -# header row --
    %tr
      - headings.each do |heading|
        %th= heading
      %th
    -# data rows --
    - @items.each do |item|
      %tr
        -# data cells --
        - headings.each do |heading|
          %td
            %span{ :class => heading }= item[heading]
        -# botton --
        %td
          %span{ :class => "pull-right" }
            %a{ :href => "/Symplectic/log2/delete/#{item[:id]}", :class => "btn btn-warning" }
              Delete

-# End of file -------------------------
