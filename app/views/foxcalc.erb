<blockquote>Fox Calculas</blockquote>

<!--  --------------------------------------------------------  -->
<div class="panel panel-default">
  
  <div class="panel-heading">
    <h3 class="panel-title">Input a word and a generator:</h3>
  </div>
  
  <div class="panel-body">
      <div class="row">
      <form action="/FoxCalc" method="post">
      
            <div class="col-xs-4"><div class="input-group">
            <span class="input-group-addon">d</span>
            <input type="text" name="word" class="form-control">
            </div></div>
	    
            <div class="col-xs-3" style="padding-left: 0px"><div class="input-group">
            <span class="input-group-addon">/d</span>
            <input type="text" name="gen" class="form-control">
            </div></div>
	    
	    <div class="input-group">
	    <button type="submit" class="btn btn-default">Submit</button>
	    </div>
	    
      </form>
      </div>
  </div>
  
</div>
<!--  --------------------------------------------------------  -->

<!--  <div class="well well-lg"> -->
<div class="bs-docs-example" data-content="OUTPUT">
     <%=
       unless (params['word'].nil? || params['word'].empty?) then
           g = (params['gen'].nil?) ? Generator.new('a') : Generator.new(params['gen'])
           w = (params['word'].nil?) ? Word.new('a') : Word.new(params['word'])
           fc = FoxCalculator[g]
           "#{w.to_s}  --(d/d#{g.to_char})-->  #{fc.send(w).to_s}"
       end
     %>
</div>
